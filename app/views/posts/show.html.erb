<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<h2> Comments </h2>
<section>
  <% @post.comments.each do |comment| %>
    <p><%= comment.content %></p>
  <% end %>

  <%= form_tag post_comments_path @post do %>
    <%= text_area_tag :content %>
    <%= submit_tag "comentar" %>
  <% end %>
</section>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
